datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id String @unique
  username String
  email String @unique
  password String
  email_verified Boolean @default(false)
  active Boolean @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@id([id])
}

model Post {
  id String @unique
  userId String
  image String
  text String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@id([id])
}

enum reactionType {
  LIKE
  UNLIKE
}

model Reaction{
  id String @unique
  postId String
  userId String
  type reactionType
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@id([id])
}

enum infoRequestStatus {
  PENDING
  CLOSED
}

model InfoRequest {
  id String @unique
  postId String
  userId String
  status infoRequestStatus
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@id([id])
}

enum notificationType {
  INFO_REQUEST_NOTIFICATION
  INFO_REQUEST_NOTIFICATION_CLOSED
}

model Notification {
  id String @unique
  userId String
  read Boolean
  type notificationType
  message String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@id([id])
}